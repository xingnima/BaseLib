<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/base_core_dp_4" />
            <stroke android:width="@dimen/base_core_divider_height" android:color="@color/base_core_color_d8" />
            <solid android:color="@color/base_core_color_e9" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/base_core_dp_4" />
            <stroke android:width="@dimen/base_core_divider_height" android:color="@color/base_core_color_dd" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/base_core_dp_4" />
            <stroke android:width="@dimen/base_core_divider_height" android:color="@color/base_core_color_dd" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/base_core_dp_4" />
            <stroke android:width="@dimen/base_core_divider_height" android:color="@color/base_core_color_dd" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/base_core_dp_4" />
            <stroke android:width="@dimen/base_core_divider_height" android:color="@color/base_core_color_d8" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>
</selector>